pipeline {
    
    agent any

    tools {
        maven ' Maven 3.6.1'
        //go 'go-1.15' 
    }

    stages {
        
        stage("build"){
            steps{
                echo "Compiling ..."
                dir("worker"){
                    sh "mvn compile"
                }
            }
        }
        
        stage("test"){
            steps{
                echo "Unit testing ..."
            }
        }
        
        stage("package"){
            steps{
                echo "Packaging ..."
            }
        }
    }
    post {
        always {
            echo "Build pipeline has finished!"

        }
    }
}