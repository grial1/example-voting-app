pipeline {
    
    agent any

    tools {
        maven 'Maven 3.6.1'
        //go 'go-1.15' 
    }

    stages {
        
        stage("build"){
            when { 
                changeset "**/worker/**"    
            }
            steps{
                echo "Compiling ..."
                dir("worker"){
                    sh "mvn compile"
                }
            }
        }
        
        stage("test"){
            when { 
                changeset "**/worker/**"    
            }
            steps{
                echo "Unit testing ..."
                dir("worker")
                {
                    sh "mvn clean test"
                }                
            }
        }
        
        stage("package"){
            when { 
                branch "master"  
                changeset "**/worker/**"    
            }
            steps{
                echo "Packaging ..."
                dir("worker")
                {
                    sh "mvn package -DskipTest"
                }
                archiveArtifacts artifacts: "**/target/*.jar", fingerprint: true
            }
        }
    }
    post {
        always {
            echo "Build pipeline has finished!"

        }

        //success {
        //    archiveArtifacts artifacts: "**/target/*.jar", fingerprint: true
        //}
    }
}